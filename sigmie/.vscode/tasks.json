{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "vendor/bin/phpunit --no-coverage"
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "vendor/bin/phpunit",
            "problemMatcher": []
        },
        {
            "label": "test unit suite",
            "type": "shell",
            "command": "vendor/bin/phpunit --no-coverage --testsuite unit",
            "problemMatcher": []
        },
        {
            "label": "test integration suite",
            "type": "shell",
            "command": "vendor/bin/phpunit --no-coverage --testsuite integration",
            "problemMatcher": []
        },
        {
            "label": "phpcs",
            "type": "shell",
            "command": "vendor/bin/phpcs --standard=PSR12 --ignore=vendor/*,.history/* ./",
            "problemMatcher": []
        },
        {
            "label": "phpmd",
            "type": "shell",
            "command": "vendor/bin/phpmd ./ text cleancode,codesize,controversial,design,unusedcode,naming --exclude vendor,.history",
            "problemMatcher": []
        },
        {
            "label": "composer update",
            "type": "shell",
            "command": "composer update",
            "problemMatcher": []
        },
        {
            "label": "composer install",
            "type": "shell",
            "command": "composer install",
            "problemMatcher": []
        },
        {
            "label": "test file",
            "type": "shell",
            "command": "vendor/bin/phpunit --no-coverage ${file}",
            "problemMatcher": []
        },
        {
            "label": "test method",
            "type": "shell",
            "command": "vendor/bin/phpunit --no-coverage --filter ${selectedText} ${file}",
            "problemMatcher": []
        }
    ]
}